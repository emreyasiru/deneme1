@model eticaret.Modeller.UrunDetayViewModel
@{
    ViewData["Title"] = "Ürün Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Model.UrunAdi - Detaylar</h2>
        <a href="@Url.Action("Urunler", "Admin")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Geri Dön
        </a>
    </div>

    <div id="alertContainer"></div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-plus-circle"></i> Yeni Varyant Ekle</h5>
        </div>
        <div class="card-body">
            <form id="detayForm">
                <div class="row">
                    <!-- NUMARA SEÇİMİ -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-shoe-prints"></i> Numara (Opsiyonel)
                            </label>
                            <div class="numara-input-wrapper">
                                <input type="number" class="form-control form-control-sm" 
                                       id="numaraInput" placeholder="Örn: 40">
                                <button type="button" class="btn btn-sm btn-primary" id="numaraEkleBtn">
                                    <i class="fas fa-plus"></i> Ekle
                                </button>
                            </div>
                            <div id="numaralarContainer" class="mt-3">
                                <!-- Seçilen numaralar buraya eklenecek -->
                            </div>
                            <small class="text-muted d-block mt-2">
                                <strong>Seçilen Numaralar:</strong>
                                <span id="secilenNumaralar">Henüz eklenmedi</span>
                            </small>
                        </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="marka">Marka</label>
                            <input type="text" class="form-control" id="marka" name="marka" placeholder="Örn: Nike" required>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Bedenler (Çoklu Seçim)</label>
                            <div class="border rounded p-2" style="max-height: 250px; overflow-y: auto; background: #f8f9fa;">
                                <div class="mb-2">
                                    <small class="text-primary fw-bold">Seçilenler: <span id="secilenBedenler" class="text-dark">Henüz seçilmedi</span></small>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input beden-check" type="checkbox" value="XXS" id="beden-xxs">
                                    <label class="form-check-label" for="beden-xxs">XXS</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input beden-check" type="checkbox" value="XS" id="beden-xs">
                                    <label class="form-check-label" for="beden-xs">XS</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input beden-check" type="checkbox" value="S" id="beden-s">
                                    <label class="form-check-label" for="beden-s">S</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input beden-check" type="checkbox" value="M" id="beden-m">
                                    <label class="form-check-label" for="beden-m">M</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input beden-check" type="checkbox" value="L" id="beden-l">
                                    <label class="form-check-label" for="beden-l">L</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input beden-check" type="checkbox" value="XL" id="beden-xl">
                                    <label class="form-check-label" for="beden-xl">XL</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input beden-check" type="checkbox" value="XXL" id="beden-xxl">
                                    <label class="form-check-label" for="beden-xxl">XXL</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input beden-check" type="checkbox" value="XXXL" id="beden-xxxl">
                                    <label class="form-check-label" for="beden-xxxl">XXXL</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Renkler (Çoklu Seçim)</label>
                            <div class="border rounded p-2" style="max-height: 200px; overflow-y: auto; background: #f8f9fa;">
                                <div class="mb-2">
                                    <small class="text-primary fw-bold">Seçilen Renkler:</small>
                                    <div id="secilenRenkler" class="d-flex flex-wrap gap-1 mt-1">
                                        <small class="text-muted">Henüz eklenmedi</small>
                                    </div>
                                </div>
                                <div id="renklerContainer">
                                    <!-- Dinamik renkler buraya eklenecek -->
                                </div>
                                <button type="button" class="btn btn-md btn-outline-primary mt-2" id="renkEkleBtn" style="font-size: 11px; padding: 4px 8px;">
                                    <i class="fas fa-plus"></i> Renk Ekle
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            <label for="boy">Boy</label>
                            <input type="text" class="form-control" id="boy" name="boy" placeholder="Uzun">
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-save"></i> Kaydet
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="fas fa-list"></i> @Model.UrunAdi - Varyantlar</h5>
        </div>
        <div class="card-body">
            @if (Model.Detaylar != null && Model.Detaylar.Count > 0)
            {
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th>Numara</th>
                                    <th>Marka</th>
                                    <th>Bedenler</th>
                                    <th>Renkler</th>
                                    <th>Boy</th>
                                    <th class="text-center">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody id="detaylarTable">
                            @foreach (var detay in Model.Detaylar)
                            {
                                        <tr id="detay-@detay.Id">
                                            <td><strong>@Model.UrunAdi</strong></td>
                                            <td>@(detay.Numara?.ToString() ?? "-")</td>
                                            <td>@(detay.Marka ?? "-")</td>
                                            <td>
                                        @if (!string.IsNullOrEmpty(detay.Beden))
                                        {
                                            var bedenler = detay.Beden.Split(',');
                                            foreach (var beden in bedenler)
                                            {
                                              <span class="badge bg-primary me-1">@beden.Trim()</span>
                                            }
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                            </td>
                                            <td>
                                        @if (!string.IsNullOrEmpty(detay.Renk))
                                        {
                                             var renkler = detay.Renk.Split(',');
                                            <div class="d-flex flex-wrap gap-1">
                                            @foreach (var renk in renkler)
                                            {
                                                <div class="d-flex align-items-center border rounded p-1" style="background: #f8f9fa;">
                                                    <div style="width: 20px; height: 20px; background-color: @renk.Trim(); border: 1px solid #ccc; border-radius: 3px; margin-right: 5px;"></div>
                                                    <small>@renk.Trim()</small>
                                                </div>
                                            }
                                            </div>
                                        }
                                        else
                                        {
                                           <span>-</span>
                                        }
                                            </td>
                                            <td>@(detay.Boy ?? "-")</td>
                                            <td class="text-center">
                                                <button class="btn btn-sm btn-danger btn-sil" 
                                                        data-id="@detay.Id"
                                                        title="Sil">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                            }
                            </tbody>
                        </table>
                    </div>
            }
            else
            {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        Bu ürün için henüz detay eklenmemiş. Yukarıdaki formu kullanarak detay ekleyebilirsiniz.
                    </div>
            }
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    let renkSayaci = 0;
    const secilenRenkler = [];
    let secilenNumaralar = [];

    $(document).ready(function() {
        // İlk renk inputunu ekle
        renkEkle();

        // Beden seçimi değiştiğinde güncelle
        $('.beden-check').on('change', function() {
            guncelleSecilenBedenler();
        });

        // NUMARA EKLEME
        $('#numaraEkleBtn').click(function() {
            const numara = $('#numaraInput').val().trim();

            if (!numara) {
                showAlert('warning', 'Lütfen bir numara girin!');
                return;
            }

            if (secilenNumaralar.includes(numara)) {
                showAlert('warning', 'Bu numara zaten eklenmiş!');
                return;
            }

            secilenNumaralar.push(numara);
            numaraEkle(numara);
            $('#numaraInput').val(''); // Input'u temizle
            guncelleSecilenNumaralar();
        });

        // Enter tuşuna basınca da eklesin
        $('#numaraInput').keypress(function(e) {
            if (e.which === 13) {
                e.preventDefault();
                $('#numaraEkleBtn').click();
            }
        });

        function numaraEkle(numara) {
            const numaraHtml = `
                <div class="numara-badge numara-item" data-numara="${numara}">
                    ${numara}
                    <button type="button" class="numara-sil" data-numara="${numara}" title="Sil">×</button>
                </div>
            `;
            $('#numaralarContainer').append(numaraHtml);
        }

        function guncelleSecilenNumaralar() {
            if (secilenNumaralar.length > 0) {
                const numaralarText = secilenNumaralar.sort((a, b) => a - b).join(', ');
                $('#secilenNumaralar').html(`<span class="badge bg-success">${numaralarText}</span>`);
            } else {
                $('#secilenNumaralar').html('Henüz eklenmedi');
            }
        }

        // Numara silme
        $(document).on('click', '.numara-sil', function(e) {
            e.preventDefault();
            const numara = $(this).data('numara').toString();
            const index = secilenNumaralar.indexOf(numara);

            if (index > -1) {
                secilenNumaralar.splice(index, 1);
            }

            $(`.numara-item[data-numara="${numara}"]`).remove();
            guncelleSecilenNumaralar();
        });

        function guncelleSecilenBedenler() {
            const secilenler = [];
            $('.beden-check:checked').each(function() {
                secilenler.push($(this).val());
            });

            if (secilenler.length > 0) {
                $('#secilenBedenler').html(secilenler.map(b => `<span class="badge bg-success me-1">${b}</span>`).join(''));
            } else {
                $('#secilenBedenler').html('Henüz seçilmedi');
            }
        }

        // Renk ekle butonuna tıklandığında
        $('#renkEkleBtn').click(function() {
            renkEkle();
        });

        function renkEkle() {
            renkSayaci++;
            const renkHtml = `
                <div class="d-flex align-items-center mb-2 renk-item" id="renk-item-${renkSayaci}">
                    <input type="color" class="form-control form-control-color renk-picker" 
                           id="renkPicker-${renkSayaci}" value="#000000" style="width: 40px; height: 30px;">
                    <input type="text" class="form-control form-control-sm mx-2 renk-value" 
                           id="renk-${renkSayaci}" value="#000000" readonly style="font-size: 11px; flex: 1;">
                    <button type="button" class="btn btn-sm btn-danger renk-sil" data-id="${renkSayaci}">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;
            $('#renklerContainer').append(renkHtml);

            // Renk seçici değiştiğinde
            $(`#renkPicker-${renkSayaci}`).on('input', function() {
                $(`#renk-${renkSayaci}`).val($(this).val());
                guncelleSecilenRenkler();
            });

            guncelleSecilenRenkler();
        }

        function guncelleSecilenRenkler() {
            const renkler = [];
            $('.renk-value').each(function() {
                const renk = $(this).val();
                if (renk) {
                    renkler.push(renk);
                }
            });

            if (renkler.length > 0) {
                const renkHtml = renkler.map(r => 
                    `<div style="width: 25px; height: 25px; background-color: ${r}; border: 1px solid #ccc; border-radius: 3px;" title="${r}"></div>`
                ).join('');
                $('#secilenRenkler').html(renkHtml);
            } else {
                $('#secilenRenkler').html('<small class="text-muted">Henüz eklenmedi</small>');
            }
        }

        // Renk silme
        $(document).on('click', '.renk-sil', function() {
            const id = $(this).data('id');
            $(`#renk-item-${id}`).remove();
            guncelleSecilenRenkler();
        });

        // Form gönderimi
        $('#detayForm').submit(function(e) {
            e.preventDefault();

            const marka = $('#marka').val().trim();
            const boy = $('#boy').val().trim() || null;

            // Seçili bedenleri al (OPSIYONEL)
            const bedenler = [];
            $('.beden-check:checked').each(function() {
                bedenler.push($(this).val());
            });

            // Seçili renkleri al (OPSIYONEL)
            const renkler = [];
            $('.renk-value').each(function() {
                const renk = $(this).val();
                if (renk && !renkler.includes(renk)) {
                    renkler.push(renk);
                }
            });

            // Validasyon - sadece Marka zorunlu
            if (!marka) {
                showAlert('warning', 'Lütfen marka girin!');
                return;
            }

            // Virgülle ayrılmış string'e çevir
            const bedenStr = bedenler.length > 0 ? bedenler.join(',') : null;
            const renkStr = renkler.length > 0 ? renkler.join(',') : null;

            // Her seçili numara için ayrı ayrı kaydet
            if (secilenNumaralar.length > 0) {
                let kaydedilenSayi = 0;
                const toplamSayi = secilenNumaralar.length;

                secilenNumaralar.sort((a, b) => a - b).forEach(function(numara) {
                    const formData = {
                        urunId: '@Model.UrunId',
                        numara: parseInt(numara), // INT olarak gönder
                        marka: marka,
                        beden: bedenStr,
                        renk: renkStr,
                        boy: boy
                    };

                    $.ajax({
                        url: '@Url.Action("DetayEkle", "Admin")',
                        type: 'POST',
                        data: formData,
                        success: function(response) {
                            kaydedilenSayi++;
                            if (kaydedilenSayi === toplamSayi) {
                                showAlert('success', toplamSayi + ' varyant başarıyla eklendi!');
                                setTimeout(function() {
                                    // Formu temizle
                                    $('#detayForm')[0].reset();
                                    secilenNumaralar = [];
                                    $('#numaralarContainer').empty();
                                    $('#secilenNumaralar').html('Henüz eklenmedi');
                                    $('.beden-check').prop('checked', false);
                                    guncelleSecilenBedenler();
                                    $('.renk-item').remove();
                                    renkSayaci = 0;
                                    renkEkle();
                                    location.reload();
                                }, 1500);
                            }
                        },
                        error: function() {
                            showAlert('danger', 'Numara ' + numara + ' kaydedilirken hata oluştu!');
                        }
                    });
                });
            } else {
                // Numara yoksa tek kayıt yap
                const formData = {
                    urunId: '@Model.UrunId',
                    numara: null,
                    marka: marka,
                    beden: bedenStr,
                    renk: renkStr,
                    boy: boy
                };

                $.ajax({
                    url: '@Url.Action("DetayEkle", "Admin")',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        if (response.success) {
                            showAlert('success', response.message);
                            setTimeout(function() {
                                // Formu temizle
                                $('#detayForm')[0].reset();
                                secilenNumaralar = [];
                                $('#numaralarContainer').empty();
                                $('#secilenNumaralar').html('Henüz eklenmedi');
                                $('.beden-check').prop('checked', false);
                                guncelleSecilenBedenler();
                                $('.renk-item').remove();
                                renkSayaci = 0;
                                renkEkle();
                                location.reload();
                            }, 1500);
                        } else {
                            showAlert('danger', response.message);
                        }
                    },
                    error: function() {
                        showAlert('danger', 'Bir hata oluştu!');
                    }
                });
            }
        });

        function showAlert(type, message) {
            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : 'times-circle'}"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            $('#alertContainer').html(alertHtml);
            setTimeout(function() {
                $('.alert').fadeOut(500);
            }, 5000);
        }
    });
</script>

